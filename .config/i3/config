# Volume Control
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer sset Master 5%+
bindsym XF86AudioLowerVolume exec --no-startup-id amixer sset Master 5%-
bindsym XF86AudioMute exec --no-startup-id amixer -q sset Master toggle

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec ~/.config/scripts/bright_up.sh # increase screen brightness
bindsym XF86MonBrightnessDown exec ~/.config/scripts/bright_down.sh # decrease screen brightness

# Touchpad controls
bindsym XF86TouchpadToggle exec ~/.config/scripts/touchpad_toggle.sh # toggle touchpad

# Switch Video Output
bindsym Mod2 + Mod4 + p exec ~/.config/scripts/setup_external_monitor.sh

